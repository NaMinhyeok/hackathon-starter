generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conversation {
  id           String   @id @default(cuid())
  status       String   @default("idle") // idle, running, completed, error
  volumeId     String?                   // Moru volume ID
  sandboxId    String?                   // Current sandbox ID (null when not running)
  sessionId    String?                   // Claude Code session ID for resume
  errorMessage String?                   // Error message if status=error
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Room {
  id          String       @id @default(cuid())
  code        String       @unique
  name        String
  description String?
  hostToken   String       @default(cuid())
  volumeId    String?
  status      String       @default("lobby") // lobby | active | ended
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  rounds      Round[]
  suggestions Suggestion[]
}

model Suggestion {
  id        String   @id @default(cuid())
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  text      String
  authorId  String
  status    String   @default("pending") // pending | selected | built
  voteCount Int      @default(0)
  createdAt DateTime @default(now())
  votes     Vote[]
  round     Round?
}

model Vote {
  id           String     @id @default(cuid())
  suggestionId String
  suggestion   Suggestion @relation(fields: [suggestionId], references: [id], onDelete: Cascade)
  voterId      String
  createdAt    DateTime   @default(now())

  @@unique([suggestionId, voterId])
}

model Round {
  id           String     @id @default(cuid())
  roomId       String
  room         Room       @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roundNumber  Int
  suggestionId String     @unique
  suggestion   Suggestion @relation(fields: [suggestionId], references: [id])
  status       String     @default("building") // building | completed | error
  sandboxId    String?
  sessionId    String?
  errorMessage String?
  createdAt    DateTime   @default(now())
  completedAt  DateTime?
}
